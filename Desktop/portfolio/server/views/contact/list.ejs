<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
  
  <div class="row">
    <div class="col-md-offset-3 col-md-8">
      <h1><%=title %></h1>
      <% if(typeof displayName == 'string' && displayName) { %>

      <a href="/contact-list/add" class="btn btn-primary" role="button">
      </i> Add a contact
   <%}%>

      <a href="/contact-list/add" class="btn btn-primary" role="button">
        Add contact
      </a>
      <br />
      <table class="table table-bordered table-striped table-hover">
        <!--HEader row-->
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Author</th>
          <th class="text-center">Published</th>
          <th class="text-center">Description</th>
          <th class="text-center">Price</th>
          <% if(typeof displayName == 'string' && displayName) { %>

          <th class="text-center"></th>
          <th class="text-center"></th>
          <%}%>
        </tr>

        <!--Repetable Templet row-->
        <% for (let count=0; count<ContactList.length; count++){%>
          <tr>
            <td class="text-centre "><%=ContactList[count].name %></td>
            <td class="text-centre "><%=ContactList[count].number %></td>
            <td class="text-centre "><%=ContactList[count].email %></td>
            <td class="text-center col-1">
              <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
              </i> Edit</a>
          </td>
          <td class="text-center col-1">
              <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
              </i> Delete</a>
          </td>
          </tr>
        <%}%>
      </table>
    </div>
  </div>
</main>

<%- include ../partials/contact.ejs %> <%- include ../partials/footer.ejs %>
