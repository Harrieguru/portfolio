<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name </label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter Contact Name:"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="NumberTextField">Contact Number</label>
          <input
            type="number"
            class="form-control"
            id="NumberTextField"
            placeholder="Enter Contact Number:"
            name="contactnumber"
            value="<%= contact.number %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="EmailTextField">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="EmailTextField"
            placeholder="Enter Email Address:"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>
<%- include ../partials/contact.ejs %> <%- include ../partials/footer.ejs %>
